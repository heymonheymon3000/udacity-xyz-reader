<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/ltgray"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_image_height"
            android:background="@color/photo_placeholder"
            android:cropToPadding="false"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_text_margin"
            android:paddingTop="@dimen/item_text_margin"
            android:paddingRight="@dimen/item_text_margin"
            android:paddingBottom="@dimen/item_bottom_text_margin"
            android:textColor="@color/primaryTextColor"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_text_margin"
            android:paddingRight="@dimen/item_text_margin"
            android:paddingBottom="@dimen/item_text_margin"
            android:textColor="@color/item_subtitle_color"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
